@{
    ViewData["Title"] = "List of Pets";
}
<div class="container body-content">
    <h2>@ViewData["Title"]</h2>
    <h3>@ViewData["Message"]</h3>

    <table class="table">
        <tr>
            <th>Pet's ID</th>
            <th>Pet's Name</th>
            <th>Pet's Owner</th>
            <th>Pet's Type</th>
        </tr>
        @for (int i = 0; i < Model[0].Count; i++)
        {
            <tr>
                @for (int j = 0; j <4 ; j++)
                {
                    <td>@Model[j][i]</td>
                }
            </tr>
        }
    </table>

</div>
